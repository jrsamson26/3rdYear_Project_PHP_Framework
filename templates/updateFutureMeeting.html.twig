{% extends '_base.html.twig' %}

{% block main %}
    <!--This is the log out the page-->
    <div id = "logout">
        <a href = "/killSession">Log Out</a>

        {% if message %}
            <p>{{ message }}</p>
        {% endif %}
    </div>

    <!--This is the add meeting page-->
    <div id = "addMeeting">
        <h1>Add Meetings</h1>

        <form action="/processUpdateFutureMeeting" method="post">

            <span class = "form1">
                <label for="id">Id:</label>
                <input type="text" title="id" name="id"  placeholder="Enter Description" autofocus />
            </span>

            <span class = "form2">
                <label for="description">Description:</label>
                <input type="text" title="description" name="description"  placeholder="Enter Description" autofocus />
            </span>

            <span class = "form3">
                <label for="day">Day:</label>
                <input type="date" title="day" name="day"  placeholder="Enter day of future meeting" autofocus />
            </span>

            <span class = "form4">
                <label for="time">Time:</label>
                <input type="time" title="time" name="time"  placeholder="Enter time of future meeting" autofocus />
            </span>

            <span class = "form5">
                <label for="duration">Duration:</label>
                <input type = "time" title="duration" name = "duration"  placeholder="Enter Duration of the future Meeting" autofocus />
            </span>

            <span class = "form6">
                <label for="approval">Room:</label>
                <input type = "text" title="room" name = "room"  placeholder="Enter future Meeting Room" autofocus />
            </span>

            <span class = "form7">
                <input type="submit" value="Submit">
                <input type="reset" value="Reset">
            </span>
        </form>
    </div>

    <div id = "displayMeeting">
        {% include 'listFutureMeeting.html.twig' %}
    </div>

{% endblock %}